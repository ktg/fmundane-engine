{
  
  "id" : "layer1",

  "start": {
    "actions": [["greet", "fanoff"]],
    "event": "e0"
  },

  "events": [{
    "id": "e0",
    "subscription" : "/speech",
    "type": "speech",
    "rules": [{
        "rule": {
          "operator": "contains",
          "operand": ["yes"]
        },
        "actions": [
          ["turningonfan", "fanhot"],
          ["facescan"]
        ],
        "next": "asknames"
      },
      {
        "rule": {
          "operator": "contains",
          "operand": ["no"]
        },
        "actions": [
          ["askagain", "greet"]
        ],
        "next": "e0"
      }
    ],
    "default": {
      "rule": {
        "operator": "timeout",
        "operand": 3000
      },
      "actions": ["greet"],
      "next": "e0"
    }
  },
  {
    "id": "asknames",
    "subscription" : "/speech",
    "type": "speech",
    "rules": [{
        "rule": {
          "operator": "any"
        },
        "actions": [
          ["sayhello"]
        ],
        "next": "e1"
      }
    ]
  },
  {
    "id": "e1",
    "subscription" : "/press",
    "type": "button",
    "data": ["yes", "no", "maybe"],
    "rules": [{
        "rule": {
          "operator": "equals",
          "operand": "yes"
        },
        "actions": [
          ["fanoff", "blindsdown"]
        ],
        "next": "e2"
      },
      {
        "rule": {
          "operator": "equals",
          "operand": "no"
        },
        "actions": [
          ["pinklights"]
        ],
        "next": "e2"
      }
    ],
    "default": {
      "rule": {
        "operator": "timeout",
        "operand": 3000
      },
      "actions": ["greet"],
      "next": "e0"
    }
  },
  {
    "id": "e2",
    "subscription" : "/gesture",
    "type": "gesture",
    "rules": [{
        "rule": {
          "operator": "equals",
          "operand": ["thumbsup"]
        },
        "actions": [
          ["fanoff", "blindsup"]
        ],
        "next": "e1"
      },
      {
        "rule": {
          "operator": "equals",
          "operand": ["thumbsdown"]
        },
        "actions": [
          ["pinklights"]
        ],
        "next": "e0"
      }
    ],
    "default": {
      "rule": {
        "operator": "timeout",
        "operand": 3000
      },
      "actions": ["greet"],
      "next": "e0"
    }
  }
]}
